{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "metadata": {
      "oneOf": [
        {
          "$ref": "LongFormatMetadata.schema.json"
        },
        {
          "$ref": "WideFormatMetadata.schema.json"
        }
      ]
    },
    "series": {
      "type": "array",
      "items": {
        "$ref": "SeriesDefinition.schema.json"
      }
    },
    "layout": {
      "type": "object"
    },
    "config": {
      "type": "object"
    }
  },
  "additionalProperties": false,
  "required": [
    "metadata",
    "series",
    "layout"
  ]
}
