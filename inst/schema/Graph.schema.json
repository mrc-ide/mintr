{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "longFormatMetadata": {
      "type": "object",
      "properties": {
        "x_col": { "type": "string" },
        "y_col": { "type": "string" },
        "id_col": {"type": "string" },
        "format": { "enum": ["long"] },
        "settings": { "type": "array", "items": { "type": "string"}}
      },
      "additionalProperties": false,
      "required": ["x_col","id_col","format"]
    },
    "wideFormatMetadata": {
      "type": "object",
      "properties": {
        "cols": { "type": "array", "items": { "type": "string"}},
        "id_col": {"type": "string" },
        "format": { "enum": ["wide"] },
        "settings": { "type": "array", "items": { "type": "string"}}
      },
      "additionalProperties": false,
      "required": ["cols","id_col","format"]
    },
    "seriesDefinition": {
      "type": "object",
      "properties": {
        "x": {
          "type": "array",
          "items": {
            "oneOf": [{"type": "number"}, {"type": "string"}]
          }
        },
        "y": {
          "type": "array",
          "items": {
            "type": "number"
          }
        },
        "y_formula": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "id": {"type": "string"},
        "name": {"type": "string"},
        "type": {"type": "string"}
      },
      "additionalProperties": true
    }
  },
  "properties": {
    "metadata": {
      "oneOf": [
        {
          "$ref": "#/definitions/longFormatMetadata"
        },
        {
          "$ref": "#/definitions/wideFormatMetadata"
        }
      ]
    },
    "series": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/seriesDefinition"
      }
    },
    "layout": {
      "type": "object"
    },
    "config": {
      "type": "object"
    }
  },
  "additionalProperties": false,
  "required": [
    "metadata",
    "series",
    "layout"
  ]
}
